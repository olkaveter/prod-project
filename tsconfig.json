{
  "compilerOptions": {
    "outDir": "./build/",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}